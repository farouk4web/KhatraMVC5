@model Khatra.Models.ForgotPasswordViewModel
@using Khatra.Resources.ModelsResources
@using Khatra.Resources.ViewsResources
@{
    ViewBag.Title = global.Forgotpassword;
}
<div class="forgotPassword text-center">
    <div class="container">

        <div class="form">
            <h3 class="text-center">@ViewBag.Title</h3>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = fields.Email })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.AntiForgeryToken()
                    <input type="submit" class="btn" value="@global.Send" />
                </div>
                <p>
                    @global.ForgotpasswordMsg
                </p>
            }

        </div>


    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
