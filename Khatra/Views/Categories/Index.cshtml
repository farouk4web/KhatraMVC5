@using Khatra.Models
@using Khatra.Resources.ViewsResources

@model IEnumerable<Khatra.Models.Category>
@{
    ViewBag.Title = global.Categories;
}

<div class="categories">
    <div class="container">

        <h2>@global.Categories</h2>

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger">
                @global.NoCategoryMsg
            </div>
        }

        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="category text-center">
                        <div class="main">
                            <h3>@Html.ActionLink(category.Name, "AllPosts", new { id = category.Id })</h3>
                            <h4>@category.Posts.Count() @global.Posts</h4>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
