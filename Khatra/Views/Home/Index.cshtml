<!-- start Top users -->
<div class="topUsers text-center">
    <div class="container">
        <h2 class="h1Center">@global.TopReactUsers</h2>
        <div class="row">
            @foreach (var user in Model.TopUsers)
            {
                <div class="col-sm-4 col-md-2">
                    <div class="user">
                        <a href="/Users/Account/@user.Id" class="window_link"></a>
                        <img src="@user.UserImageSrc" title="@user.FullName" alt="@user.FullName" class="img-thumbnail img-circle img-responsive" />
                        <h5>@user.FullName</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- end Top users -->
<!-- start statistics -->
<div class="statistics text-center">
    <div class="overlay">
        <div class="container">
            <h2 class="h1Center">@global.Statistics</h2>
            <div class="row">
                <div class="col-sm-3">
                    <i class="fa fa-file-o fa-5x"></i>
                    <h3>@Model.PostsNumber</h3>
                    <h4>@global.PostedPosts</h4>
                </div>
                <div class="col-sm-3">
                    <i class="fa fa-users fa-5x"></i>
                    <h3>@Model.UsersNumber</h3>
                    <h4>@global.WebSiteUsers</h4>
                </div>
                <div class="col-sm-3">
                    <i class="fa fa-list-alt fa-5x"></i>
                    <h3>@Model.CategoriesNumber</h3>
                    <h4>@global.SiteCategories</h4>
                </div>
                <div class="col-sm-3">
                    <i class="fa fa-comments fa-5x"></i>
                    <h3>@Model.CommentsNumber</h3>
                    <h4>@global.PostedComments</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end statistics -->

<div class="follow">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2 class="h1">@global.FollowHeading</h2>
                <p class="lead">
                    @global.FollowParagraph
                </p>
            </div>
            <div class="col-sm-6 text-center">

                <div class="col-sm-6">
                    <h3><a href="#"><i class="fa fa-facebook fa-5x fa-fw" data-color="#3b5998"></i></a></h3>
                </div>

                <div class="col-sm-6">
                    <h3><a href="#"><i class="fa fa-instagram fa-5x fa-fw" data-color="#bc2a8d"></i></a></h3>
                </div>

                <div class="col-sm-6">
                    <h3><a href="#"><i class="fa fa-twitter fa-5x fa-fw" data-color="#1da1f2"></i></a></h3>
                </div>

                <div class="col-sm-6">
                    <h3><a href="#"><i class="fa fa-youtube fa-5x fa-fw" data-color="#ff0000"></i></a></h3>
                </div>

            </div>
        </div>
    </div>
</div>

