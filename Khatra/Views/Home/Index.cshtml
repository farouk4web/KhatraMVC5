@model Khatra.ViewModels.HomeViewModel
@using Khatra.Models

@using Khatra.Resources.ViewsResources

@{
    ViewBag.Title = global.home;
    ApplicationDbContext context = new ApplicationDbContext();
}

<!-- start New Posts On Slider -->
<div class="slider">
    <div id="sliderImages" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner" role="listbox">
            @if (Model.NewPosts.Count() == 0)
            {
                <div class="item">
                    <div class="carousel-caption">
                        <h2 style="color:#fff">@global.NewPosts</h2>
                        <p class="lead text-center">
                            @global.NoPostsMsg
                        </p>
                    </div>
                </div>
            }

            @foreach (var post in Model.NewPosts)
            {
                <div class="item">
                    <img src="~/Uploads/Posts/@post.ImageSrc" alt="...">
                    <div class="carousel-caption">
                        <h3>@Html.ActionLink(post.Title, "Read", "Posts", new { id = post.Id }, null)</h3>
                    </div>
                </div>
            }


        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#sliderImages" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#sliderImages" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <!-- Controls -->

    </div>
</div>
<!-- end New Posts On Slider -->
<!-- start  Top Read Posts -->
<div class="TopReadPosts">
    <div class="container">
        <h2 class="h1">@global.TopReadPosts</h2>
        @if (Model.TopReadPosts.Count() == 0)
        {
            <p class="lead text-center">
                @global.NoPostsMsg
            </p>
        }
        <div class="row">
            @foreach (var post in Model.TopReadPosts)
            {
                <div class="col-sm-6 col-md-4">
                    @Html.Partial("_Post", post)
                </div>
            }
        </div>
    </div>
</div>



