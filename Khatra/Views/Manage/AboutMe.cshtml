@using Khatra.Resources.ViewsResources
@model Khatra.Models.AboutMeModel
@{
    ViewBag.Title = global.Update;
}
<div class="container">
    <div class="aboutMe">

        <h2>@global.AboutMe</h2>
        <p class="lead">
           @global.aboutMeDescription
        </p>

        <form action="/Manage/AboutMe/" method="post" class="text-center">
            <div class="form-group">
                @Html.TextAreaFor(m => m.AboutMe, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AboutMe)
            </div>

            <div class="form-group">
                @Html.AntiForgeryToken()
                <input type="submit" value="@global.Save" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}